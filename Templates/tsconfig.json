{
    "compilerOptions": {
        "noLib": true,
        "target": "es3",
        "ignoreDeprecations": "5.0",
        "declaration": true,
        "emitDeclarationOnly": true, 
        "outDir": "./types",       
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,        
        "allowSyntheticDefaultImports": true
    },
    "include":
        [
            "$$DESPACED_TARGET_NAME$$_helpers/**/*"
        ]
}